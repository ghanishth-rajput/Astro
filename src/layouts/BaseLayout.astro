---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="stylesheet" href="/assets/styles/style.css">
</head>
<body>
  <slot name="header" />
  <main>
    <slot />
  </main>
  <slot name="footer" />
  <script src="/src/scripts/app.js" defer></script>
</body>
</html>
